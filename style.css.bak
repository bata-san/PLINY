/* ===============================================
 * PLINY REFRESHED: Modern UI/UX v3.0
 * =============================================== */

@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');

:root {
    /* Light Theme Colors */
    --primary: #6366f1;
    --primary-light: #818cf8;
    --primary-dark: #4f46e5;
    --primary-bg: #f0f9ff;
    
    --secondary: #64748b;
    --secondary-light: #94a3b8;
    --secondary-bg: #f8fafc;
    
    --success: #10b981;
    --success-light: #34d399;
    --success-bg: #ecfdf5;
    
    --warning: #f59e0b;
    --warning-light: #fbbf24;
    --warning-bg: #fffbeb;
    
    --danger: #ef4444;
    --danger-light: #f87171;
    --danger-bg: #fef2f2;
    
    --info: #3b82f6;
    --info-light: #60a5fa;
    --info-bg: #eff6ff;
    
    /* Background Colors */
    --bg-primary: #ffffff;
    --bg-secondary: #f8fafc;
    --bg-tertiary: #f1f5f9;
    --bg-overlay: rgba(0, 0, 0, 0.5);
    
    /* Text Colors */
    --text-primary: #1e293b;
    --text-secondary: #64748b;
    --text-tertiary: #94a3b8;
    --text-inverse: #ffffff;
    
    /* Border Colors */
    --border-light: #e2e8f0;
    --border-medium: #cbd5e1;
    --border-dark: #94a3b8;
    
    /* Shadow */
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    
    /* Border Radius */
    --radius-sm: 0.375rem;
    --radius-md: 0.5rem;
    --radius-lg: 0.75rem;
    --radius-xl: 1rem;
    --radius-2xl: 1.5rem;
    
    /* Spacing */
    --space-1: 0.25rem;
    --space-2: 0.5rem;
    --space-3: 0.75rem;
    --space-4: 1rem;
    --space-5: 1.25rem;
    --space-6: 1.5rem;
    --space-8: 2rem;
    --space-10: 2.5rem;
    --space-12: 3rem;
    --space-16: 4rem;
    
    /* Typography */
    --font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --font-size-xs: 0.75rem;
    --font-size-sm: 0.875rem;
    --font-size-base: 1rem;
    --font-size-lg: 1.125rem;
    --font-size-xl: 1.25rem;
    --font-size-2xl: 1.5rem;
    --font-size-3xl: 1.875rem;
    --font-size-4xl: 2.25rem;
    
    /* Transitions */
    --transition-fast: 150ms ease-in-out;
    --transition-normal: 250ms ease-in-out;
    --transition-slow: 350ms ease-in-out;
    
    /* Layout */
    --sidebar-width: 280px;
    --header-height: 80px;
    --border-width: 1px;
}

/* Dark Theme */
[data-theme="dark"] {
    --bg-primary: #0f172a;
    --bg-secondary: #1e293b;
    --bg-tertiary: #334155;
    
    --text-primary: #f1f5f9;
    --text-secondary: #cbd5e1;
    --text-tertiary: #94a3b8;
    
    --border-light: #334155;
    --border-medium: #475569;
    --border-dark: #64748b;
    
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.3);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.4), 0 2px 4px -1px rgba(0, 0, 0, 0.3);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.4), 0 4px 6px -2px rgba(0, 0, 0, 0.3);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.4), 0 10px 10px -5px rgba(0, 0, 0, 0.3);
}

/* Reset & Base Styles */
*,
*::before,
*::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

html {
    font-size: 16px;
    scroll-behavior: smooth;
}

body {
    font-family: var(--font-family);
    font-size: var(--font-size-base);
    line-height: 1.6;
    color: var(--text-primary);
    background: var(--bg-secondary);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    overflow-x: hidden;
}

/* ===============================================
 * Authentication UI
 * =============================================== */

#auth-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 3000;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.auth-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.auth-particles {
    position: absolute;
    width: 100%;
    height: 100%;
    background: 
        radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.3) 0%, transparent 50%),
        radial-gradient(circle at 40% 40%, rgba(120, 219, 255, 0.3) 0%, transparent 50%);
    animation: float 20s ease-in-out infinite;
}

@keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    33% { transform: translateY(-20px) rotate(1deg); }
    66% { transform: translateY(10px) rotate(-1deg); }
}

#auth-container {
    background: var(--bg-primary);
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-xl);
    padding: var(--space-12);
    width: 100%;
    max-width: 420px;
    position: relative;
    z-index: 10;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.auth-header {
    text-align: center;
    margin-bottom: var(--space-8);
}

.auth-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
}

.auth-logo i {
    font-size: var(--font-size-3xl);
    color: var(--primary);
    background: linear-gradient(135deg, var(--primary), var(--primary-light));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.auth-logo h1 {
    font-size: var(--font-size-4xl);
    font-weight: 800;
    background: linear-gradient(135deg, var(--primary), var(--primary-light));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.auth-subtitle {
    color: var(--text-secondary);
    font-size: var(--font-size-lg);
    font-weight: 500;
}

.auth-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
}

.form-group {
    position: relative;
}

.input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
}

.input-wrapper i {
    position: absolute;
    left: var(--space-4);
    color: var(--text-tertiary);
    font-size: var(--font-size-lg);
    z-index: 2;
}

.auth-form input {
    width: 100%;
    padding: var(--space-4) var(--space-4) var(--space-4) var(--space-12);
    border: 2px solid var(--border-light);
    border-radius: var(--radius-lg);
    font-size: var(--font-size-base);
    background: var(--bg-primary);
    color: var(--text-primary);
    transition: var(--transition-normal);
}

.auth-form input:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
}

.auth-button {
    width: 100%;
    padding: var(--space-4);
    background: linear-gradient(135deg, var(--primary), var(--primary-light));
    color: var(--text-inverse);
    border: none;
    border-radius: var(--radius-lg);
    font-size: var(--font-size-base);
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition-normal);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
}

.auth-button:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
}

.auth-switch {
    text-align: center;
    color: var(--text-secondary);
    font-size: var(--font-size-sm);
}

.auth-switch a {
    color: var(--primary);
    text-decoration: none;
    font-weight: 600;
    transition: var(--transition-fast);
}

.auth-switch a:hover {
    color: var(--primary-light);
}

.auth-message {
    padding: var(--space-4);
    border-radius: var(--radius-lg);
    font-size: var(--font-size-sm);
    font-weight: 500;
    margin-bottom: var(--space-6);
    display: none;
}

.auth-message.error {
    background: var(--danger-bg);
    color: var(--danger);
    border: 1px solid var(--danger-light);
    display: block;
}

.auth-message.success {
    background: var(--success-bg);
    color: var(--success);
    border: 1px solid var(--success-light);
    display: block;
}

/* ===============================================
 * Main App Layout
 * =============================================== */

#app-container {
    display: flex;
    height: 100vh;
    background: var(--bg-secondary);
}

#loading-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--bg-overlay);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2000;
    backdrop-filter: blur(5px);
}

.loading-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
    color: var(--text-primary);
}

.loading-spinner {
    width: 48px;
    height: 48px;
    border: 4px solid var(--border-light);
    border-top: 4px solid var(--primary);
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* ===============================================
 * Sidebar
 * =============================================== */

#sidebar {
    width: var(--sidebar-width);
    background: var(--bg-primary);
    border-right: 1px solid var(--border-light);
    display: flex;
    flex-direction: column;
    box-shadow: var(--shadow-md);
    z-index: 100;
}

.sidebar-header {
    padding: var(--space-6);
    border-bottom: 1px solid var(--border-light);
}

.app-brand {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-6);
}

.brand-icon {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, var(--primary), var(--primary-light));
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-inverse);
    font-size: var(--font-size-lg);
}

.app-brand h1 {
    font-size: var(--font-size-2xl);
    font-weight: 700;
    color: var(--text-primary);
}

.user-section {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.user-info {
    display: flex;
    align-items: center;
    gap: var(--space-3);
}

.user-avatar {
    width: 40px;
    height: 40px;
    background: var(--bg-tertiary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-secondary);
    font-size: var(--font-size-lg);
}

.user-details {
    display: flex;
    flex-direction: column;
}

.user-details span:first-child {
    font-weight: 600;
    color: var(--text-primary);
    font-size: var(--font-size-sm);
}

.user-status {
    font-size: var(--font-size-xs);
    color: var(--success);
    font-weight: 500;
}

.logout-button {
    width: 36px;
    height: 36px;
    background: transparent;
    border: 1px solid var(--border-light);
    border-radius: var(--radius-md);
    color: var(--text-secondary);
    cursor: pointer;
    transition: var(--transition-normal);
    display: flex;
    align-items: center;
    justify-content: center;
}

.logout-button:hover {
    background: var(--danger-bg);
    color: var(--danger);
    border-color: var(--danger-light);
}

/* Sidebar Navigation */
.sidebar-nav {
    flex: 1;
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
}

.nav-section h3 {
    font-size: var(--font-size-xs);
    font-weight: 600;
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-3);
}

.nav-buttons {
    display: flex;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
}

.nav-button {
    width: 40px;
    height: 40px;
    background: transparent;
    border: 1px solid var(--border-light);
    border-radius: var(--radius-md);
    color: var(--text-secondary);
    cursor: pointer;
    transition: var(--transition-normal);
    display: flex;
    align-items: center;
    justify-content: center;
}

.nav-button:hover:not(:disabled) {
    background: var(--primary-bg);
    color: var(--primary);
    border-color: var(--primary);
}

.nav-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.nav-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3) var(--space-4);
    border-radius: var(--radius-lg);
    color: var(--text-secondary);
    cursor: pointer;
    transition: var(--transition-normal);
    font-weight: 500;
}

.nav-item:hover {
    background: var(--bg-tertiary);
    color: var(--text-primary);
}

.nav-item.active {
    background: var(--primary-bg);
    color: var(--primary);
}

.nav-item i {
    font-size: var(--font-size-lg);
    width: 20px;
    text-align: center;
}

.sidebar-footer {
    padding: var(--space-6);
    border-top: 1px solid var(--border-light);
}

.save-status {
    font-size: var(--font-size-xs);
    color: var(--text-tertiary);
    text-align: center;
    transition: var(--transition-normal);
}

/* ===============================================
 * Main Content
 * =============================================== */

#main-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.main-header {
    height: var(--header-height);
    background: var(--bg-primary);
    border-bottom: 1px solid var(--border-light);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 var(--space-8);
    box-shadow: var(--shadow-sm);
}

.header-left h2 {
    font-size: var(--font-size-2xl);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--space-1);
}

.view-description {
    color: var(--text-secondary);
    font-size: var(--font-size-sm);
}

.primary-button {
    background: linear-gradient(135deg, var(--primary), var(--primary-light));
    color: var(--text-inverse);
    border: none;
    border-radius: var(--radius-lg);
    padding: var(--space-3) var(--space-6);
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition-normal);
    display: flex;
    align-items: center;
    gap: var(--space-2);
}

.primary-button:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
}

/* ===============================================
 * Content Area
 * =============================================== */

.content-area {
    flex: 1;
    overflow: hidden;
    position: relative;
}

.content-panel {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--bg-primary);
    transform: translateX(100%);
    transition: var(--transition-slow);
    z-index: 10;
}

.content-panel.active {
    transform: translateX(0);
}

.panel-header {
    padding: var(--space-6);
    border-bottom: 1px solid var(--border-light);
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.panel-header h3 {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--text-primary);
}

.panel-close {
    width: 40px;
    height: 40px;
    background: transparent;
    border: 1px solid var(--border-light);
    border-radius: var(--radius-md);
    color: var(--text-secondary);
    cursor: pointer;
    transition: var(--transition-normal);
    display: flex;
    align-items: center;
    justify-content: center;
}

.panel-close:hover {
    background: var(--bg-tertiary);
    color: var(--text-primary);
}

.panel-content {
    padding: var(--space-6);
    height: calc(100% - 80px);
    overflow-y: auto;
}

/* ===============================================
 * Forms
 * =============================================== */

.task-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
}

.form-row {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
}

.form-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
}

.form-group label {
    font-weight: 600;
    color: var(--text-primary);
    font-size: var(--font-size-sm);
}

.input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
}

.input-wrapper i {
    position: absolute;
    left: var(--space-4);
    color: var(--text-tertiary);
    font-size: var(--font-size-lg);
    z-index: 2;
}

.input-wrapper input,
.input-wrapper textarea {
    width: 100%;
    padding: var(--space-4) var(--space-4) var(--space-4) var(--space-12);
    border: 2px solid var(--border-light);
    border-radius: var(--radius-lg);
    font-size: var(--font-size-base);
    background: var(--bg-primary);
    color: var(--text-primary);
    transition: var(--transition-normal);
    font-family: var(--font-family);
}

.input-wrapper input:focus,
.input-wrapper textarea:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
}

.input-wrapper textarea {
    resize: vertical;
    min-height: 120px;
    padding-top: var(--space-4);
}

.form-actions {
    display: flex;
    justify-content: flex-end;
    gap: var(--space-4);
    padding-top: var(--space-4);
    border-top: 1px solid var(--border-light);
}

.submit-button {
    background: linear-gradient(135deg, var(--primary), var(--primary-light));
    color: var(--text-inverse);
    border: none;
    border-radius: var(--radius-lg);
    padding: var(--space-3) var(--space-6);
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition-normal);
    display: flex;
    align-items: center;
    gap: var(--space-2);
}

.submit-button:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
}

/* ===============================================
 * Label Selector
 * =============================================== */

.label-selector {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    padding: var(--space-4);
    background: var(--bg-secondary);
    border-radius: var(--radius-lg);
    border: 2px solid var(--border-light);
}

.label-checkbox-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-md);
    background: var(--bg-primary);
    border: 1px solid var(--border-light);
    cursor: pointer;
    transition: var(--transition-normal);
    font-size: var(--font-size-sm);
    font-weight: 500;
}

.label-checkbox-item:hover {
    background: var(--bg-tertiary);
}

.label-checkbox-item.selected {
    background: var(--primary-bg);
    border-color: var(--primary);
    color: var(--primary);
}

.label-checkbox-item input {
    display: none;
}

.label-color-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    flex-shrink: 0;
}

/* ===============================================
 * Content Views
 * =============================================== */

.content-view {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--bg-primary);
    transform: translateX(100%);
    transition: var(--transition-slow);
    z-index: 5;
}

.content-view.active {
    transform: translateX(0);
}

.view-header {
    padding: var(--space-6);
    border-bottom: 1px solid var(--border-light);
}

.view-stats {
    display: flex;
    gap: var(--space-8);
}

.stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-1);
}

.stat-number {
    font-size: var(--font-size-2xl);
    font-weight: 700;
    color: var(--primary);
}

.stat-label {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    font-weight: 500;
}

/* ===============================================
 * Task List
 * =============================================== */

.task-list {
    padding: var(--space-6);
    height: calc(100% - 120px);
    overflow-y: auto;
}

.task-node {
    position: relative;
    margin-bottom: var(--space-2);
}

.task-card {
    background: var(--bg-primary);
    border: 1px solid var(--border-light);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
    display: flex;
    align-items: center;
    gap: var(--space-4);
    transition: var(--transition-normal);
    cursor: pointer;
}

.task-card:hover {
    border-color: var(--primary);
    box-shadow: var(--shadow-md);
    transform: translateY(-1px);
}

.task-card.completed {
    opacity: 0.6;
    background: var(--bg-secondary);
}

.task-card.completed .task-text {
    text-decoration: line-through;
}

.task-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
}

.task-text {
    font-weight: 600;
    color: var(--text-primary);
    font-size: var(--font-size-base);
}

.task-meta {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
}

.task-labels {
    display: flex;
    gap: var(--space-1);
}

.task-label-badge {
    padding: var(--space-1) var(--space-2);
    background: var(--bg-tertiary);
    color: var(--text-secondary);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-xs);
    font-weight: 500;
}

.task-actions {
    display: flex;
    gap: var(--space-2);
}

.task-actions button {
    width: 32px;
    height: 32px;
    background: transparent;
    border: 1px solid var(--border-light);
    border-radius: var(--radius-md);
    color: var(--text-secondary);
    cursor: pointer;
    transition: var(--transition-normal);
    display: flex;
    align-items: center;
    justify-content: center;
}

.task-actions button:hover {
    background: var(--bg-tertiary);
    color: var(--text-primary);
}

.task-actions button.complete:hover {
    background: var(--success-bg);
    color: var(--success);
}

.task-actions button.delete:hover {
    background: var(--danger-bg);
    color: var(--danger);
}

/* ===============================================
 * Calendar
 * =============================================== */

.calendar-wrapper {
    height: 100%;
    padding: var(--space-6);
}

/* ===============================================
 * Modals
 * =============================================== */

.modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--bg-overlay);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    backdrop-filter: blur(5px);
}

.modal-content {
    background: var(--bg-primary);
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-xl);
    width: 90%;
    max-width: 500px;
    max-height: 90vh;
    overflow: hidden;
    border: 1px solid var(--border-light);
}

.modal-header {
    padding: var(--space-6);
    border-bottom: 1px solid var(--border-light);
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.modal-icon {
    width: 48px;
    height: 48px;
    background: var(--warning-bg);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--warning);
    font-size: var(--font-size-xl);
    margin-right: var(--space-4);
}

.modal-header h3 {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--text-primary);
    flex: 1;
}

.modal-close-btn {
    width: 40px;
    height: 40px;
    background: transparent;
    border: 1px solid var(--border-light);
    border-radius: var(--radius-md);
    color: var(--text-secondary);
    cursor: pointer;
    transition: var(--transition-normal);
    display: flex;
    align-items: center;
    justify-content: center;
}

.modal-close-btn:hover {
    background: var(--bg-tertiary);
    color: var(--text-primary);
}

.modal-body {
    padding: var(--space-6);
    max-height: 400px;
    overflow-y: auto;
}

.modal-footer {
    padding: var(--space-6);
    border-top: 1px solid var(--border-light);
    display: flex;
    justify-content: flex-end;
    gap: var(--space-4);
}

.modal-button {
    padding: var(--space-3) var(--space-6);
    border-radius: var(--radius-lg);
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition-normal);
    border: none;
}

.modal-button.primary {
    background: linear-gradient(135deg, var(--primary), var(--primary-light));
    color: var(--text-inverse);
}

.modal-button.secondary {
    background: var(--bg-tertiary);
    color: var(--text-primary);
    border: 1px solid var(--border-light);
}

.modal-button:hover {
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
}

/* ===============================================
 * Responsive Design
 * =============================================== */

@media (max-width: 1024px) {
    :root {
        --sidebar-width: 240px;
    }
    
    #sidebar {
        position: fixed;
        left: -100%;
        transition: var(--transition-normal);
        z-index: 200;
    }
    
    #sidebar.open {
        left: 0;
    }
    
    #main-content {
        margin-left: 0;
    }
}

@media (max-width: 768px) {
    :root {
        --sidebar-width: 100%;
        --header-height: 60px;
    }
    
    #app-container {
        flex-direction: column;
    }
    
    #sidebar {
        position: fixed;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100vh;
        z-index: 200;
    }
    
    #sidebar.open {
        left: 0;
    }
    
    .main-header {
        padding: 0 var(--space-4);
    }
    
    .header-left h2 {
        font-size: var(--font-size-xl);
    }
    
    .view-description {
        display: none;
    }
    
    .content-panel,
    .content-view {
        position: relative;
        transform: none;
    }
    
    .panel-content {
        height: auto;
        max-height: 60vh;
    }
    
    .view-stats {
        gap: var(--space-4);
    }
    
    .stat-item {
        flex: 1;
    }
}

/* ===============================================
 * Utility Classes
 * =============================================== */

.hidden {
    display: none !important;
}

.fade-in {
    animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
}

.slide-in {
    animation: slideIn 0.3s ease-in-out;
}

@keyframes slideIn {
    from { transform: translateX(100%); }
    to { transform: translateX(0); }
}

/* ===============================================
 * Additional Components
 * =============================================== */

/* AI Assistant */
.ai-description {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-4);
    background: var(--info-bg);
    border-radius: var(--radius-lg);
    margin-bottom: var(--space-6);
}

.ai-description i {
    font-size: var(--font-size-xl);
    color: var(--info);
}

.ai-examples {
    margin-bottom: var(--space-6);
}

.ai-examples h4 {
    font-size: var(--font-size-base);
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--space-3);
}

.example-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
}

.example-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2);
    background: var(--bg-secondary);
    border-radius: var(--radius-md);
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
}

.example-item i {
    color: var(--warning);
    font-size: var(--font-size-sm);
}

.ai-button {
    width: 100%;
    background: linear-gradient(135deg, var(--info), var(--info-light));
    color: var(--text-inverse);
    border: none;
    border-radius: var(--radius-lg);
    padding: var(--space-4);
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition-normal);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
}

.ai-button:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
}

/* Google Sync */
.sync-status {
    margin-bottom: var(--space-6);
}

.status-card {
    padding: var(--space-4);
    border-radius: var(--radius-lg);
    font-size: var(--font-size-sm);
    font-weight: 500;
    text-align: center;
}

.status-card.disconnected {
    background: var(--bg-tertiary);
    color: var(--text-secondary);
    border: 1px solid var(--border-light);
}

.status-card.connected {
    background: var(--success-bg);
    color: var(--success);
    border: 1px solid var(--success-light);
}

.status-card.syncing {
    background: var(--warning-bg);
    color: var(--warning);
    border: 1px solid var(--warning-light);
}

.status-card.error {
    background: var(--danger-bg);
    color: var(--danger);
    border: 1px solid var(--danger-light);
}

.sync-actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
}

.sync-button {
    width: 100%;
    padding: var(--space-3) var(--space-4);
    border-radius: var(--radius-lg);
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition-normal);
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
}

.sync-button.connect {
    background: linear-gradient(135deg, var(--success), var(--success-light));
    color: var(--text-inverse);
}

.sync-button.sync {
    background: linear-gradient(135deg, var(--info), var(--info-light));
    color: var(--text-inverse);
}

.sync-button.disconnect {
    background: transparent;
    color: var(--danger);
    border: 1px solid var(--danger);
}

.sync-button:hover {
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
}

/* Data Management */
.data-section {
    margin-bottom: var(--space-8);
}

.data-section h4 {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--space-2);
}

.data-section p {
    color: var(--text-secondary);
    font-size: var(--font-size-sm);
    margin-bottom: var(--space-4);
}

.data-button {
    width: 100%;
    padding: var(--space-3) var(--space-4);
    background: linear-gradient(135deg, var(--primary), var(--primary-light));
    color: var(--text-inverse);
    border: none;
    border-radius: var(--radius-lg);
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition-normal);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
}

.data-button:hover {
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
}

.import-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
}

.checkbox-label {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    cursor: pointer;
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
}

.checkbox-label input[type="checkbox"] {
    width: 16px;
    height: 16px;
    accent-color: var(--primary);
}

/* Label Management */
.label-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    margin-bottom: var(--space-6);
}

.label-editor-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3);
    background: var(--bg-secondary);
    border-radius: var(--radius-lg);
    border: 1px solid var(--border-light);
}

.label-color-preview {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    cursor: pointer;
    border: 2px solid var(--bg-primary);
    box-shadow: var(--shadow-sm);
}

.label-name-input {
    flex: 1;
    border: none;
    background: transparent;
    font-size: var(--font-size-base);
    color: var(--text-primary);
    font-weight: 500;
}

.label-name-input:focus {
    outline: none;
}

.priority-control {
    display: flex;
    background: var(--bg-tertiary);
    border-radius: var(--radius-md);
    padding: 2px;
}

.priority-control button {
    padding: var(--space-1) var(--space-2);
    font-size: var(--font-size-xs);
    font-weight: 500;
    background: transparent;
    color: var(--text-secondary);
    border: none;
    border-radius: var(--radius-sm);
    cursor: pointer;
    transition: var(--transition-fast);
}

.priority-control button.active {
    background: var(--bg-primary);
    color: var(--text-primary);
    box-shadow: var(--shadow-sm);
}

.add-button {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, var(--primary), var(--primary-light));
    color: var(--text-inverse);
    border: none;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: var(--transition-normal);
    display: flex;
    align-items: center;
    justify-content: center;
}

.add-button:hover {
    transform: scale(1.05);
    box-shadow: var(--shadow-md);
}

/* Modal Label List */
.modal-label-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    margin: var(--space-4) 0;
    max-height: 200px;
    overflow-y: auto;
}

.modal-label-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3);
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: var(--transition-normal);
}

.modal-label-item:hover {
    background: var(--bg-tertiary);
}

.modal-label-item input[type="checkbox"] {
    width: 18px;
    height: 18px;
    accent-color: var(--primary);
}

.modal-label-item .label-color-dot {
    width: 16px;
    height: 16px;
    border-radius: 50%;
}

.modal-label-item .label-name {
    flex: 1;
    font-weight: 500;
    color: var(--text-primary);
}

.task-info {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3);
    background: var(--bg-secondary);
    border-radius: var(--radius-lg);
    margin-bottom: var(--space-4);
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
}

.task-info i {
    color: var(--primary);
}

.modal-divider {
    height: 1px;
    background: var(--border-light);
    margin: var(--space-6) 0;
}

#modal-add-new-label-section h4 {
    font-size: var(--font-size-base);
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--space-3);
}

#modal-add-new-label-section .form-row {
    display: flex;
    gap: var(--space-2);
}

#modal-add-new-label-btn {
    width: 44px;
    height: 44px;
    background: linear-gradient(135deg, var(--primary), var(--primary-light));
    color: var(--text-inverse);
    border: none;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: var(--transition-normal);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--font-size-lg);
}

#modal-add-new-label-btn:hover {
    transform: scale(1.05);
    box-shadow: var(--shadow-md);
}